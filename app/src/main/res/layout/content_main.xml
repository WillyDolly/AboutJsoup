<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.popland.pop.aboutjsoup.MainActivity"
    tools:showIn="@layout/activity_main">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BTNandroid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Androidhealines"
        android:id="@+id/BTNandroid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TechTimes"
        android:id="@+id/BTNtech"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BTNandroid"
        android:layout_toEndOf="@+id/BTNandroid" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DigitalTrends"
        android:id="@+id/BTNdigital"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BTNtech"
        android:layout_toEndOf="@+id/BTNtech" />

</RelativeLayout>
